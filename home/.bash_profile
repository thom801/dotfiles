# Export path to user bin - http://stackoverflow.com/questions/16366986/adding-bin-directory-in-your-path
export PATH="$PATH":~/bin

# http://apple.stackexchange.com/questions/93002/how-to-properly-update-git-on-mac
export PATH="/usr/local/bin:$PATH"

### Added by the Heroku Toolbelt
export PATH="/usr/local/heroku/bin:$PATH"

# Navigation
alias ll="ls -a"
alias lla="ls -all"

# Development Path Shortcuts
alias cdf="cd ~/develop/freelance/"
alias cdl="cd ~/develop/laboratory/"
alias cdo="cd ~/develop/opensource/"
alias cdp="cd ~/develop/personal/"
